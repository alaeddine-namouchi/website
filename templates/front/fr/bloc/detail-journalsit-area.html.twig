<div class="row pl-5 pb-0 pt-3 ">
    <h3 class="ml-2">ESPACE JOURNALISTES</h3>
</div>

<div class="row">

    <div class="col-md-12 col-lg-8 col-sm-12 col-12">

<div class="row pl-5 py-3">
    <ul class="list-group list-group-flush " >
        {%  for item in contents.items  %}
        <li class="list-group-item bg-light  list-press " style="cursor:auto ;">
            <h5>{{ item.title }}</h5>
            <p> {{ item.intro }}.</p>
            <button type="button" class="btn btn-primary-news  mr-2  float-right"  onclick="document.location.href='{{ path('front_content_show', {'id': item.id, 'slug': item.slug}) }}'">Lire l'article</button>

        </li>
        {% endfor %}
        <div class="navigation">
            {{ knp_pagination_render(contents) }}
        </div>
    </ul>

</div>
<div class="row justify-content-end ">


        <nav aria-label="Page navigation example " class="float-right ">
            <ul class="pagination ">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                </li>
                <li class="page-item active"><a class="page-link " href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>

</div>
</div>

    {{ render(controller(
        'App\\Controller\\Front\\ContentController::blocNews', {'_local':  app.request.locale}
    )) }}


</div>
