<div class="col-lg-4  d-none d-lg-block">

<div class="card mb-0 mt-2">
    <div class="card-header " style="    border-radius: 5px 5px 0 0;background-color:#1F487E; color:azure">
        <h5 class="card-title pt-1 pl-2">الأخبار</h5>
    </div>
    <div class="card-body">
        <!-- <h5 class="card-title" style="text-transform: uppercase;padding-left: 20px;font-size:17px; text-align:left;font-weight:bold;color:#999"></h5> -->
        <div class="list-group" style="padding-right:20px;padding-top:5px">
            {%  for item in contents.items  %}
            <a href="{{ path('front_content_show', {'id': item.id, 'slug': item.slug}) }}" class="list-group-item list-group-item-action flex-column align-items-start  list-group-item-adapter-first" style="padding-right: 0px;">
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1 text-left " style="color:#454;text-align:right">{{ item.title }}</h6>
                </div>
                <small class="text-muted" style="text-align: right;float:right">{{ item.publishedDate ? item.publishedDate|date('d-m-Y') : '' }}</small>
                <p class="mb-1 " style="color:#666;text-align: right;float:right;margin-right:0px">{{ item.intro}} </p>
                <small style="text-align: right;float:right">اقرأ المزيد...</small>
            </a>
            {%  endfor %}
        </div>
    </div>
    <a href="#" class="card-button bg-light" > كل الأخبار</a>
