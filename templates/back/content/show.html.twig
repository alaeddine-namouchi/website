{% extends 'back/base.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
    <h1>Content</h1>
    <table class="table">
        <tbody>
        {% if  content.id  is defined %}
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ content.title }}</td>
            </tr>
            <tr>
                <th>Intro</th>
                <td>{{ content.intro }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td> <div class="">
                <img src="{{ asset('uploads/'~ content.picture) }}" alt="{{ content.picture }}"/>
                </div></td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ content.body | raw }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ content.slug }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ content.tags }}</td>
            </tr>
            <tr>
                <th>Published_date</th>
                <td>{{ content.publishedDate ? content.publishedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ content.updatedAt ? content.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ content.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Full Width</th>
                <td>{{ content.fullWidth ? 'Yes' : 'No' }}</td>
            </tr>

        </tbody>
    </table>

    <a  class="btn btn-sm btn-default"  href="{{ path('app_content_index', {'scope': content.scope.id}) }}"><<< back to list</a> <br/>

    <a class="btn btn-sm btn-primary mb-3 mt-3" href="{{ path('app_content_edit', {'id': content.id, 'article_id': content.article.id}) }}">edit</a>
    {{ include('back/content/_delete_form.html.twig') }}
    {% else %}
        <table class="table">
            <tr>
                <td colspan="11">Cette Article n'est pas encore traduit en <b> {{language | upper}}</b></td>
            </tr>
        </table>
    {% endif %}

{% endblock %}
