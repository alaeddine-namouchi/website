{% extends 'back/base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ contact.object }}</td>
            </tr>
            <tr>
                <th>EmailAdress</th>
                <td>{{ contact.emailAdress }}</td>
            </tr>
            <tr>
                <th>MobileNumber</th>
                <td>{{ contact.mobileNumber }}</td>
            </tr>
        </tbody>
    </table>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <input type="hidden" id="contact_id" value="{{ contact.id }}">
                <ol class="dd-list widget-todo-list">

                    {% for theme in themes %}
                        {% set checkedTheme ='' %}
                        {% for contact_theme in contact_themes %}
                            {% if theme.id == contact_theme.theme.id %}
                                {% set checkedTheme ="checked = true" %}
                            {% endif %}
                        {% endfor %}
                        <li class="dd-item dd-handle ban-section pt-2" id="{{ theme.id }}">
                            <div class=" checkbox-custom checkbox-default" id="module-{{ theme.id }}">
                                <input type="checkbox" {{ checkedTheme }} class="theme_{{ theme.id }}"
                                       id="theme_{{ theme.id }}" value="{{ theme.id }}" />
                                <label for="checkboxExample1">Theme : {{ theme.name }}</label>
                                <small class="text-muted">{{ theme.description }}</small>
                            </div>
                        </li>

                    {% endfor %}
                </ol>
            </div>
        </div>
    </div>
    <br/><br/>

