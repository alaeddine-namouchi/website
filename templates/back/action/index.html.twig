{% extends 'back/base.html.twig' %}

{% block title %}Action index{% endblock %}

{% block body %}
    <h1>Action index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Alias</th>
                <th>Route</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for action in actions %}
            <tr>
                <td>{{ action.id }}</td>
                <td>{{ action.label }}</td>
                <td>{{ action.alias }}</td>
                <td>{{ action.route }}</td>
                <td>
                    <a href="{{ path('app_action_show', {'id': action.id}) }}">show</a>
                    <a href="{{ path('app_action_edit', {'id': action.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_action_new') }}">Create new</a> #}
{% endblock %}
